<%- include('partials/header') -%>
<%- include('partials/loggedInNav') -%>
<div class="hero min-h-screen" style="background-image: url('https://images.unsplash.com/photo-1670960058964-79063a8ecc91?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=869&q=80');">
  <div class="hero-overlay bg-opacity-20"></div> 
  <div class="hero-content text-center text-neutral-content flex-column d-flex">

      <div class="divforbutton col-3 mt-5">
        <a class="btn btn-primary" href="/profile">Return to Profile</a>
      </div>

      <div class="container text-dark">
        <div class="row justify-content-center mt-5">
          <ul class="row list-unstyled">
            <% for(var i=0; i<posts.length; i++) {%>
              <li class="col-6 justify-content-between mt-4 mb-4">
                <div class = 'bg-white p-1 rounded'>
                <a href="/post/<%= posts[i]._id%>">
                  
                  <img class="img-fluid" src="<%= posts[i].image%>">
                  <p><%= posts[i].title %> </p>
                  <p><%= posts[i].days %> day trip</p>
                  <p>Price per day: $<%= (posts[i].price/posts[i].days).toFixed(2) %> </p>
                </a>
              </div>
              </li>
            <% } %>
            </ul>
        </div>
      </div>
    
</div>
</div>     

<%- include('partials/footer') -%>